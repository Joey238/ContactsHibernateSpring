<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
 
    <persistence-unit name="contacts">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
    	   <!--this non-jta doesn't support data Transaction JPA -->
       	<non-jta-data-source>java:comp/env/jdbc/contactsdb</non-jta-data-source>
      
        <class>org.joey.contacts.entities.Address</class>
        <class>org.joey.contacts.entities.Contact</class>
        
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
<!--             	<property name="hibernate.archive.autodetection" value="class"/> -->            
			<property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>